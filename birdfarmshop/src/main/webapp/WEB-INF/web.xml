<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>MainController</servlet-name>
        <servlet-class>swp391.birdfarmshop.controller.MainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RenderHomeController</servlet-name>
        <servlet-class>swp391.birdfarmshop.controller.RenderHomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RenderBirdController</servlet-name>
        <servlet-class>swp391.birdfarmshop.controller.RenderBirdController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RenderBirdDetailsController</servlet-name>
        <servlet-class>swp391.birdfarmshop.controller.RenderBirdDetailsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddtoCartController</servlet-name>
        <servlet-class>swp391.birdfarmshop.controller.AddtoCartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RenderBirdByBreed_idController</servlet-name>
        <servlet-class>swp391.birdfarmshop.controller.RenderBirdByBreed_idController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateInformationController</servlet-name>
        <servlet-class>swp391.birdfarmshop.controller.UpdateInformationController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainController</servlet-name>
        <url-pattern>/MainController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RenderHomeController</servlet-name>
        <url-pattern>/RenderHomeController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RenderBirdController</servlet-name>
        <url-pattern>/RenderBirdController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RenderBirdDetailsController</servlet-name>
        <url-pattern>/RenderBirdDetailsController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddtoCartController</servlet-name>
        <url-pattern>/AddtoCartController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RenderBirdByBreed_idController</servlet-name>
        <url-pattern>/RenderBirdByBreed_idController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateInformationController</servlet-name>
        <url-pattern>/UpdateInformationController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>RenderHomeController</welcome-file>
    </welcome-file-list>
</web-app>
